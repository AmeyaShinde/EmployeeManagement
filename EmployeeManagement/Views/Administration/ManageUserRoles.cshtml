@model List<UserRolesViewModel>

@{
    ViewBag.Title = "Manage User Roles";
    var userId = ViewBag.userId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <div class="form-group">
                    <div class="form-check">
                        <div class="custom-control custom-checkbox">
                            <input asp-for="@Model[i].IsSelected" class="custom-control-input" />
                            <label class="custom-control-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                        </div>
                    </div>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary w-auto">Update</button>
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-primary w-auto">Cancel</a>
        </div>
    </div>
</form>