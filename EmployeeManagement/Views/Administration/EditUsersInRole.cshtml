@model List<UserRoleViewModel>

@{ 
    var roleId = ViewBag.roleId;
    var roleName = ViewBag.roleName;
    ViewBag.Title = "Edit User Roles";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="card">
                <div class="card-header">
                    <h2>Add or Remove users from @roleName role</h2>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <div class="form-group">
                            <div class="form-check">
                                <div class="custom-control custom-checkbox">
                                    <input asp-for="@Model[i].IsSelected" class="custom-control-input" />
                                    <label class="custom-control-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary w-auto">Update</button>
                    <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary w-auto">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>